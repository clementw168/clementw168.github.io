{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "personal_info": {
      "type": "object",
      "properties": {
        "name": {"type": "string"},
        "title": {"type": "string"},
        "email": {"type": "string"},
        "github_username": {"type": "string"},
        "github_link": {"type": "string"},
        "linkedin_username": {"type": "string"},
        "linkedin_link": {"type": "string"},
        "website": {"type": "string"},
        "pdf_download": {"type": "string"}
      }
    },
    "education": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "degree": {"type": "string"},
          "period": {"type": "string"},
          "duration": {"type": "string"},
          "institution": {"type": "string"},
          "description": {"type": "string"},
          "supervisor": {"type": "string"},
          "supervisor_url": {"type": "string"},
          "projects": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "description": {"type": "string"},
                "link": {"type": "string"}
              },
              "required": ["description"]
            }
          }
        }
      }
    },
    "experience": {"type": "array"},
    "highlights": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {"type": "string"},
          "period": {"type": "string"},
          "duration": {"type": "string"},
          "organization": {"type": "string"},
          "description": {"type": "string"},
          "post_link": {"type": "string"},
          "post_text": {"type": "string"}
        }
      }
    },
    "skills": {"type": "array"},
    "languages": {"type": "array"}
  }
}
